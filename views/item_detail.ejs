<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
</head>

<body>
  <%- include('partials/sidebar') %>

  <main>
    <h1><%= locals.title %></h1>
    
    <% if (!locals.item) { %>
      <p>The item you're looking for does not exist.</p>
    <% } else { %>
      <div>Price: $<%= item.price.toFixed(2) %></div>
      <div>Units left: <%= item.units %></div>
      <% if (item.category) { %>
        <div>Category: <a href="<%= item.category.url %>"><%= item.category.name %></a></div>
      <% } else { %>
        <div>Category: uncategorized</div>
      <% } %>
      <p><%= item.description %></p>
      
      <a href="<%= item.url %>/update">Update this item</a>
      <a href="<%= item.url %>/delete">Delete this item</a>
    <% } %>
  </main>
</body>

</html>